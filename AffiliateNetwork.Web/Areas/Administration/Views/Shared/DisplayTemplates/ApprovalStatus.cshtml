@model AffiliateNetwork.Common.Enumerations.ApprovalStatus

@if (Model == AffiliateNetwork.Common.Enumerations.ApprovalStatus.Approved)
{
    <img src="~/Content/Manager/imgs/active.png" alt="Approved" title="Approved" />
}
else if (Model == AffiliateNetwork.Common.Enumerations.ApprovalStatus.Disapproved)
{
    <img src="~/Content/Manager/imgs/unactive.png" alt="Disapproved" title="Disapproved" />
}
else
{
    <img src="~/Content/Manager/imgs/waiting.png" alt="Waiting Approval" title="Waiting Approval" />
}
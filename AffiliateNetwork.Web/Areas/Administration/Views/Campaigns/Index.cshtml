@model IEnumerable<AffiliateNetwork.Web.Areas.Administration.Models.ViewModels.ListCampaignsViewModel>

@using GridMvc.Html

@{
    ViewBag.Title = "List Campaigns";
}

@Html.Partial("_PageHeadingPartial")

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(x => x.Id)
        .SetWidth(30)
        .Sortable(true);

    columns.Add(x => x.Title)
        .SetWidth(120)
        .RenderValueAs(x => Html.ActionLink(x.Title, "Details", new { Id = x.Id }, null).ToHtmlString())
        .Encoded(false)
        .Sanitized(false)
        .Sortable(true)
        .Filterable(true);

    columns.Add(x => x.CategoryName)
        .Titled("Category")
        .Filterable(true)
        .Sortable(true);

    columns.Add(x => x.Type)
        .Sortable(true)
        .RenderValueAs(x => Html.DisplayFor(c => x.Type).ToHtmlString())
        .Titled("Type")
        .Encoded(false)
        .Sanitized(false);

    columns.Add(x => x.Payout)
        .SetWidth(30)
        .Filterable(true)
        .Sortable(true);

    columns.Add(x => x.Owner.CompanyName)
        .Titled("Owner")
        .Filterable(true)
        .Sortable(true);

    columns.Add(x => x.ClicksCount)
        .Titled("Clicks")
        .SetWidth(30)
        .Sortable(true);

    columns.Add(x => x.ConversionsCount)
        .Titled("Conv.")
        .SetWidth(30)
        .Sortable(true);

    columns.Add(x => x.CreatedOn)
        .Sortable(true);

    columns.Add(x => x.ApprovalStatus)
        .RenderValueAs(x => Html.DisplayFor(c => x.ApprovalStatus).ToHtmlString())
        .Titled("Status")
        .Encoded(false)
        .Sanitized(false)
        .Sortable(true);
    
    // Buttons
    columns.Add()
        .RenderValueAs(x => Html.EditButton(x.Id))
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(50);

    columns.Add()
        .RenderValueAs(x => Html.DeleteButton(x.Id))
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(50);

}).WithPaging(ViewBag.PageSize)

@section Scripts{
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
}

@section Styles{
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
}
@model AffiliateNetwork.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

<div class="col-md-8 col-md-offset-2">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        @Html.FormGroupFor(m => m.Email)
        @Html.FormGroupFor(m => m.FirstName)
        @Html.FormGroupFor(m => m.LastName)
        @Html.FormGroupFor(m => m.CompanyName)
        @Html.FormGroupFor(m => m.ContactPhone)
        @Html.FormGroupFor(m => m.Address)
        @Html.PassowrdFormGroupFor(m => m.Password)
        @Html.PassowrdFormGroupFor(m => m.ConfirmPassword)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.SubmitButton("Register")
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
